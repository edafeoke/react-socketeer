{
  "name": "react-socketeer",
  "version": "0.4.6",
  "description": "A React library for socket.io integration with rooms, private messaging, and user management/authentication",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "rollup -c rollup.config.mjs && chmod +x dist/cli/index.js",
    "dev": "rollup -c rollup.config.mjs -w",
    "test": "jest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "socket.io",
    "react",
    "websocket",
    "chat",
    "realtime"
  ],
  "author": "Oke Edafe Great",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "socket.io-client": ">=4.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^22.13.11",
    "@types/react": "^18.0.0",
    "jest": "^29.0.0",
    "rollup": "^3.0.0",
    "rollup-plugin-dts": "^5.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "ts-jest": "^29.0.0",
    "tslib": "^2.4.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@rollup/plugin-json": "^6.1.0",
    "commander": "^11.0.0",
    "socket.io-client": "^4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/edafeoke/react-socketeer.git"
  },
  "bugs": {
    "url": "https://github.com/edafeoke/react-socketeer/issues"
  },
  "homepage": "https://github.com/edafeoke/react-socketeer#readme",
  "bin": {
    "react-socketeer": "./dist/cli/index.js"
  }
}
